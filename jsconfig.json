{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "checkJs": true, // Ensure this is set if you want to use type checking
    "jsx": "react-jsx",   // Add this option to enable JSX support for React 17+
    "allowJs": true       // Allows .js files to be compiled with type checking
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
